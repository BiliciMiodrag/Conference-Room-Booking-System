
@model PlanificatorSali.Models.ApplicationUser


<div class="modal fade" id="editUser">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editUserLabel">Actualizare informații utilizator</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="Edit" controller="AccountController">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                        <label asp-for="Nume"></label>
                        <input asp-for="Nume" class="form-control" />
                        <span asp-validation-for="Nume" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Prenume"></label>
                        <input asp-for="Prenume" class="form-control" />
                        <span asp-validation-for="Prenume" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Închide </button>
                <button type="button" class="btn btn-primary" data-save="modal">Salvează </button>
            </div>
        </div>
    </div>
</div>
