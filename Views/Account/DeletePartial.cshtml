
@model PlanificatorSali.Models.ApplicationUser



<div class="modal fade" id="editUser">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editUserLabel">Ești sigur că vrei să ștergi acest utilizator?</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="Delete" controller="AccountController">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Id" />
                        <label asp-for="Nume">@Model.Nume</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Prenume">@Model.Prenume</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">@Model.Email</label>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Închide </button>
                <button type="button" class="btn btn-primary" data-save="modal">Șterge </button>
            </div>
        </div>
    </div>
</div>
